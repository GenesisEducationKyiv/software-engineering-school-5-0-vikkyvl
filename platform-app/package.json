{
  "name": "platform-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run build:all",
    "build:api-gateway": "nest build apps/api-gateway",
    "build:weather-service": "nest build apps/weather-service",
    "build:subscription-service": "nest build apps/subscription-service",
    "build:all": "concurrently \"npm run build:weather-service\" \"npm run build:subscription-service\" \"npm run build:api-gateway\"",
    "format": "prettier --write \"src/**/*.ts\" \"apps/test/**/*.ts\"",
    "start": "npm run start:all",
    "start:api-gateway": "ts-node apps/api-gateway/src/main.ts",
    "start:weather-service": "ts-node apps/weather-service/src/main.ts",
    "start:subscription-service": "ts-node apps/subscription-service/src/main.ts",
    "start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:weather-service\" \"npm run start:subscription-service\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,common,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:unit": "jest --testRegex \".*\\.spec\\.ts$\"",
    "test:int": "jest --testRegex \".*\\.int-spec\\.ts$\"",
    "test:arch": "npx depcruise --validate .dependency-cruiser.js apps",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@testcontainers/postgresql": "^11.0.3",
    "@types/nodemailer": "^6.4.17",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "axios": "^1.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.0.1",
    "eslint-plugin-import": "^2.32.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "quoted-printable": "^1.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@testcontainers/rabbitmq": "^11.0.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/quoted-printable": "^1.0.2",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "dependency-cruiser": "^16.10.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "testcontainers": "^11.0.3",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsarch": "^5.4.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "apps",
    "testRegex": ".*\\.(spec|int-spec|arch-spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
